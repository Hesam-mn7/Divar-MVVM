<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarr"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:elevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ویرایش آگهی"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/size_note"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/imgback"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarr">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="عنوان آگهی :"
                style="@style/edit"
                />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/etname"
                style="@style/sabt"
                />

            <TextView
                android:layout_width="match_parent"
                android:text="قیمت :"
                style="@style/edit"
                />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/etvalue"
                style="@style/sabt"
                />

            <TextView
                android:layout_width="match_parent"
                android:text="نام محله :"
                style="@style/edit"
                />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/ettime"
                style="@style/sabt"
                />

            <TextView
                android:layout_width="match_parent"
                android:text="شماره تلفن :"
                style="@style/edit"
                />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/etnumberPhone"
                style="@style/sabt"
                android:inputType="phone"
                />

            <TextView
                android:layout_width="match_parent"
                android:text="جزئیات :"
                style="@style/edit"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etdetails"
                style="@style/sabt"
                android:padding="8dp"
                />

            <Button
                android:id="@+id/btnedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ویرایش آگهی"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shape_button_red"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="@dimen/size_note"
                app:layout_constraintTop_toBottomOf="@id/etdetails"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>